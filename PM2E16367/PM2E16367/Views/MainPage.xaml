<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E16367.MainPage">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ubicaciones Salvadas"
                     Clicked="toolbar01_Clicked_1"
                     x:Name="toolbar01"/>
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout>

          

            <Label Text="Latitud"></Label>
            <Entry x:Name="txtlat" Placeholder="" ></Entry>

            <Label Text="Longitud"></Label>
            <Entry x:Name="txtlon" Placeholder=""></Entry>
            
            <Label Text="Describa la ubicacion"></Label>
            <Editor x:Name="txtdescripcionl" Placeholder="" />

            <Label Text="Descripcion corta"></Label>
            <Editor x:Name="txtdescripcionc" Placeholder="" />

            <Button x:Name="btnagregar" Text="Salvar Ubicacion" Clicked="btnagregar_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>







</ContentPage>
